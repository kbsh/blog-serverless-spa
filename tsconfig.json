{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    /* Strict Check */
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    /* Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* vscode */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "__tests__",
  ]
}